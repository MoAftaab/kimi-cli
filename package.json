{
  "name": "kimiai-cli",
  "version": "1.0.0",
  "description": "A beautiful CLI for Kimi AI with rich terminal interface",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "kimi": "dist/index.js",
    "kimi-ai": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "prepare": "npm run build",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "publish:npm": "npm publish",
    "build:standalone": "pkg dist/index.js --targets node18-win-x64,node18-macos-x64,node18-linux-x64 --out-path builds"
  },
  "keywords": [
    "kimi",
    "ai",
    "cli",
    "terminal",
    "chatbot",
    "moonshot"
  ],
  "author": {
    "name": "MOHD AFTAAB",
    "email": "moaftaab786@gmail.com",
    "url": "https://github.com/MoAftaab"
  },
  "license": "MIT",
  "dependencies": {
    "boxen": "^7.1.1",
    "chalk": "^5.3.0",
    "cli-table3": "^0.6.3",
    "commander": "^11.1.0",
    "conf": "^12.0.0",
    "dotenv": "^16.6.1",
    "figlet": "^1.7.0",
    "gradient-string": "^2.0.2",
    "inquirer": "^9.2.12",
    "markdown-table": "^3.0.3",
    "openai": "^4.28.0",
    "ora": "^7.0.1",
    "strip-ansi": "^7.1.0",
    "terminal-link": "^3.0.0",
    "update-notifier": "^7.0.0"
  },
  "devDependencies": {
    "@types/figlet": "^1.5.8",
    "@types/gradient-string": "^1.1.6",
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.17",
    "@types/update-notifier": "^6.0.8",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "pkg": "^5.8.1",
    "prettier": "^3.2.5",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MoAftaab/kimi-cli.git"
  },
  "bugs": {
    "url": "https://github.com/MoAftaab/kimi-cli/issues"
  },
  "homepage": "https://github.com/MoAftaab/kimi-cli#readme"
}
